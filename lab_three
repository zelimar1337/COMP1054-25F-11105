  margin: 0 auto;
  padding: 1rem;
}

/* Header */
.site-header {
  display: flex;                  /* flex container */
  justify-content: space-between; /* brand left, nav right */
  align-items: center;            /* vertical center */
  padding: 0.75rem 1rem;
  border-bottom: 1px solid #ddd;
  background: #fff;
}

.brand-link {
  text-decoration: none;
  color: #111;
