  gap: 0.75rem;
  padding: 2.5rem 1rem;
}

.hero .lead {
  color: #555;
  max-width: 60ch;
  margin: 0.25rem auto 0.75rem;
}

.hero-actions {
  display: flex;              /* row of buttons */
  flex-wrap: wrap;            /* wrap on small screens */
  gap: 0.5rem;
  justify-content: center;
}

.btn {
  border: 1px solid #ddd;
  background: #fff;
