}

/*Album grid*/
.album {
  padding: 1rem 0 3rem;
}

.cards {
  display: flex;   /* lay cards in a row */
  flex-wrap: wrap; /* allow wrapping */
  gap: 1rem;
}

.card {
  display: flex;               /* column layout */
  flex-direction: column;
  flex: 1 1 320px;             /* flexible basis ~320px */
  border: 1px solid #ddd;
  background: #fff;
  border-radius: 8px;
  overflow: hidden;
}

.thumb {
  background: #e5e7eb;
  height: 180px;               /* placeholder */
}

.card-body {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
  padding: 1rem;
}

.card-actions {
  display: flex;       /* buttons + time in a row */
  gap: 0.5rem;
  align-items: center;
  margin-top: auto;    /* stick to bottom */
}

.meta {
  color: #666;
  margin-left: auto;   /* push timestamp right */
}

/* Footer */
.site-footer {
  border-top: 1px solid #ddd;
